<h1><%= @cocktail.name %></h1>

<ul>
  <% @doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %>
    ||<%= dose.description %>
    <%= link_to "Delete #{dose.ingredient.name}",
      dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Create a new dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'  %>
<%= link_to "Back to your cocktail", cocktails_path, class: 'btn btn-primary'  %>
